{% extends 'base.html.twig' %}

{% block title %}Hero index{% endblock %}

{% block body %}
    <h1>Hero index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pv</th>
                <th>Attaque</th>
                <th>Defense</th>
                <th>Vitesse</th>
                <th>Classe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hero in heroes %}
            <tr>
                <td>{{ hero.id }}</td>
                <td>{{ hero.nom }}</td>
                <td>{{ hero.pv }}</td>
                <td>{{ hero.attaque }}</td>
                <td>{{ hero.defense }}</td>
                <td>{{ hero.vitesse }}</td>
                <td>{{ hero.Classe.nom }}</td>

                <td>
                    <a href="{{ path('app_hero_show', {'id': hero.id}) }}">show</a>
                    <a href="{{ path('app_hero_edit', {'id': hero.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hero_new') }}">Create new</a>
{% endblock %}
